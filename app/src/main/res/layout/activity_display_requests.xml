<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayRequests">

    <ScrollView
        style="@style/CardScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="12dp">

        <LinearLayout
            android:id="@+id/shelterLists"
            style="@style/MatchParent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView style="@style/Card">

                <LinearLayout style="@style/CardLinearOuter">

                    <TextView
                        android:id="@+id/textView7"
                        style="@style/Card_Address"
                        android:layout_width="match_parent"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/Card_Name"
                        android:layout_width="match_parent"
                        android:text="TextView" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>